<div class="container px-5 px-sm-0">
    <div class="row">

        <div class="col-md-3">
            <h2>User info</h2>
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size: "63x63" %>
            <% else %>
              <%= image_tag 'no_image', size: "63x63" %>
            <% end %>
            <table class="table">
                <tbody>
                  <tr>
                    <th>name</th><th><%= @user.name %></th>
                  </tr>
                  <tr>
                    <th>introduction</th><th><%= @user.introduction %></th>
                  </tr>
                </tbody>
            </table>
            <button type="button" class="btn btn-outline-secondary"><%= link_to "âš™", edit_user_path(current_user.id) %></button>

            <h2>New book</h2>
            <%= form_with model:@book, local: true do |f| %>
                <div class="form_group">
                    <p>Title</p>
                    <%= f.text_field :title %>
                </div>
                <div class="form_group">
                    <p>Opinion</p>
                    <%= f.text_area :body %>
                </div>
                <div class="form_group">
                    <%= f.submit "Create Book" %>
                </div>
            <% end %>
        </div>


         <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <% @books.each do |book| %>
                    <tbody>
                        <tr>
                            <td>
                                <%= link_to user_path(book.user.id) do %>
                                    <% if book.user.profile_image.attached? %>
                                        <%= image_tag book.user.profile_image, size: "40x40" %>
                                    <% else %>
                                      <%= image_tag 'no_image', size: "40x40" %>
                                    <% end %>
                                <%end%>
                            </td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                        </tr>
                    </tbody>
                <%end%>
            </table>
        </div>
    </div>
</div>