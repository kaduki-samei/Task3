<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse bg-dark">
      <div class="container" style="text-white">
         <div class="nav navbar-nav navbar-left" style="color: white">Bookers</div>
          <ul class="nav navbar-nav navbar-right list-inline list-inline-horizontal" style="list-style: none">
          <% if user_signed_in? %>
            <li><%= link_to "Home", user_path(current_user) %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Books", books_path %></li>
            <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li class="list-inline-item"><%= link_to "Home", root_path %></li>
            <li class="list-inline-item"><%= link_to "About", about_path %></li>
            <li class="list-inline-item"><%= link_to "sign up", new_user_registration_path %></li>
            <li class="list-inline-item"><%= link_to "login", new_user_session_path %></li>
          <% end %>
          </ul>
      </div>
    </header>

    <%= yield %>
  </body>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>

</html>
