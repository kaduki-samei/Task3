<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/37b5ba38f6.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
            <% if user_signed_in? %>
            <div class="navbar-nav ml-auto">
              <%= link_to user_path(current_user.id), class: "nav-item nav-link text-light" do %><i class="fas fa-home"></i> Home<%end%>
              <%= link_to users_path, class: "nav-item nav-link text-light" do %><i class="fas fa-users"></i> Users<%end%>
              <%= link_to books_path, class: "nav-item nav-link text-light" do %><i class="fas fa-book-open"></i> Books<%end%>
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-item nav-link text-light" do %><i class="fas fa-sign-out-alt"></i> Log out<%end%>
            </div>
            <%else%>
            <div class="navbar-nav ml-auto">
              <%= link_to root_path, class: "nav-item nav-link text-light" do %><i class="fas fa-home"></i> Home<%end%>
              <%= link_to about_path, class: "nav-item nav-link text-light" do %><i class="fas fa-link"></i> About<%end%>
              <%= link_to new_user_registration_path, class: "nav-item nav-link text-light" do %><i class="fas fa-user-plus"></i> Sign up<%end%>
              <%= link_to new_user_session_path, class: "nav-item nav-link text-light" do %><i class="fas fa-sign-in-alt"></i> Log in<%end%>
            </div>
            <%end%>
          </div>
        </div>
      </nav>
    </header>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
  </body>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>

</html>
